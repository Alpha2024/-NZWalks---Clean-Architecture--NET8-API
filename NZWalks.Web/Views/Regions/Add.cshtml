@model AddRegionViewModel
@{

}
<h1 class="mt-3">Add Region</h1>
<form method="post" asp-controller="Regions" asp-action="Add">
    <div class="mt-3">
        <label asp-for="Name" class="form-label">Name <span style="color:red">*</span></label>
        <input asp-for="Name" type="text" class="form-control" required/>
    </div>
    <div class="mt-3">
        <label  asp-for="Code" class="form-label">Code <span style="color:red">*</span></label>
        <input asp-for="Code" type="text" class="form-control" required/>
    </div>
    <div class="mt-3">
        <label asp-for="RegionImageUrl" class="form-label">Image Url</label>
        <input asp-for="RegionImageUrl" type="text" class="form-control" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>