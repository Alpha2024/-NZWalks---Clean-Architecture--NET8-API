@model RegionsDto
@{
}
<h1>Edit Region</h1>
@if(Model is not null)
{
    <form method="post" asp-controller="Regions" asp-action="Edit">
       
            <input asp-for="Id" type="text" class="form-control" hidden/>
     
        <div class="mt-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control"/>
        </div>
        <div class="mt-3">
            <label asp-for="Code" class="form-label">Code</label>
            <input asp-for="Code" type="text" class="form-control"/>
        </div>
        <div class="mt-3">
            <label asp-for="RegionImageUrl" class="form-label">Image Url</label>
            <input asp-for="RegionImageUrl" type="text" class="form-control" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
