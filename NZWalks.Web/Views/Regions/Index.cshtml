@model IEnumerable<RegionsDto>
@{
}
<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table tab-content table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var regions in Model)
        {
            <tr>
                <td>@regions.Id</td>
                <td>@regions.Code</td>
                <td>@regions.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Regions" class="btn btn-light"  asp-route-id="@regions.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Regions" class="btn btn-danger"  asp-route-id="@regions.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>